<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/image_view_in_list"
        android:layout_width="@dimen/list_view_image_width"
        android:layout_height="@dimen/list_view_image_width"
        android:layout_marginRight="7dp"
        android:clickable="true"
        android:src="@drawable/bubble_shadow" />
    
    <TextView
        android:id="@+id/text_view_name_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_in_list"
        android:layout_marginTop="10dp"
        android:freezesText="true"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_address_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_name_in_list"
        android:layout_alignLeft="@id/text_view_name_in_list"
        android:freezesText="true"
        android:textStyle="italic" />

	<TextView
        android:id="@+id/text_view_description_snippet_in_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_address_in_list"
        android:layout_alignLeft="@id/text_view_address_in_list"
        android:freezesText="true"
        android:textStyle="italic" />"

</RelativeLayout>
